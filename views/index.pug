    header(class="b-header b-header_default-text")
      hgroup(class="b-header__info" id="b-header__info")
        div(class="promo b-shift")
          div(class="b-logo")
            img(src="/assets/img/logo.svg" class="b-logo__image")
          div(class="b-header__text")
            h1(class="b-header__title") 
              | #{texts.header1} 
              span(class="italic-400") #{texts.header2}
              |  #{texts.header3} 
              span(class="italic-400") #{texts.header4}
              |  #{texts.header5}
            h2(class="b-header__subtitle") 
              | #{texts.header6} 
              span(class="italic-400") #{texts.header7}
    form(class="b-calculater")
      div(class="b-calculater__wrapper") 
        p(class="b-calculater__text")
          | #{texts.pricing1} 
          span(class="italic-bold") #{texts.pricing2}
          |  #{texts.pricing3} <br/>
          | #{texts.pricing4}<br/>
          | #{texts.pricing5} 
          span(class="italic-bold") #{texts.pricing6}
          |  #{texts.pricing7}
        div(class="b-calculater__wrapper-range" id="range-wrapper")
          p(id="range-min" class="b-calculater__range-limit") 1
          input(id="count-customers" type="range" name="range" min="1" step="1" value="50" class="b-calculater__range")
          p(id="range-max" class="b-calculater__range-limit") 1
        div(id="range-bubble" class="b-calculater__bubble" style="display: none") 0
    section(class="b-price")
      p(class="b-price__info")
        | #{texts.pricing8}
        span(class="b-price__value")
          span(id="count-customers-value")
        | #{texts.pricing9}
        span(class="italic-bold") #{texts.pricing10}
    section(class="b-email")
      p(class="b-email__text")
        | #{texts.email1} <br/>
        | #{texts.email2}  
        span(class="italic-bold") #{texts.email3}
        | #{texts.email4}
      form(class="b-email__form")
        div(class="b-email__form_wrapper")
          input(id="email_input" type="email" placeholder="my@email.com" class="b-email__input b-email__input_common")
          button(id="send_email" type="button" class="b-email__button b-email__button_common" onclick="goog_report_conversion();") #{texts.submit}
          button(id="send_email_done" type="button" class="b-email__button b-email__button_common hide" style='display: none') #{texts.done}
          input(id='lang' type='hidden' value=texts.lang)
      div(class='b-lang')
        if texts.lang == 'ru'
          a(href='/?lang=en' class="b-lang__link") English
          a(href='/?lang=ru' class="b-lang__link b-lang__link_active") Русский
        else
          a(href='/?lang=en' class="b-lang__link b-lang__link_active") English
          a(href='/?lang=ru' class="b-lang__link") Русский
    script(src="main.js")